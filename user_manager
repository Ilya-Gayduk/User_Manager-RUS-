#!/bin/bash

OPTION=$(dialog --title "User_Manager" --menu "Выберитие действие:" 15 60 4 \
"1" "Добавить пользователя" \
"2" "Изменить пользователя" \
"3" "Удалить пользователя"  \
"4" "Информация о пользователях" 3>&1 1>&2 2>&3)


case $OPTION in

	1)
		echo "Добаивть пользователя"
		;;

	2)
		echo  "Изменить пользователя"
		;;

	3)
		echo "Удалить пользователя"
		;;

	4)
		echo "Информация о пользователях"
		;;

	*)
		echo  "Выход"
		;;
esac

