#!/bin/bash

OPTION=$(dialog --title "User_Manager" --menu "Выберитие действие:" 15 60 4 \
"1" "Добавить пользователя" \
"2" "Изменить пользователя" \
"3" "Удалить пользователя"  \
"4" "Информация о пользователях" 3>&1 1>&2 2>&3)


case $OPTION in
	1)
		VALUES=$(dialog --ok-label "Создать" \
		--title "User_Manager" \
	  	--form "Добавить пользователя" \ 15 50 0 \
		"Логин:" 1 1	"$user" 	1 10 10 0 \
		"Пароль:"   2 1 "$pass"  	2 10 15 0 \
		"Группа:"   3 1 "$groups"  	3 10 8 0 \
		"UID:"   4 1 "$uid"       4 10 8 0 \
		"GID:"   5 1 "$gid"       5 10 8 0 \
		"Домашняя папка:" 6 1 "$home" 	6 10 40 0  3>&1 1>&2 2>&3)
		;;

	2)
		echo  "Изменить пользователя"
		;;

	3)
		echo "Удалить пользователя"
		;;

	4)
		clear
		dialog --infobox "ИНФОРМАЦИЯ" 20 40
		;;

	*)
		echo  "Выход"
		;;
esac

